{
  "name": "@adddog/build-configs",
  "version": "0.0.5",
  "description": "Reusable build configurations for tsup and unbuild",
  "type": "module",
  "author": "Sam Elie <sam@add.dog>",
  "license": "MIT",
  "homepage": "https://github.com/samelie/build-configs#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/samelie/build-configs.git"
  },
  "bugs": {
    "url": "https://github.com/samelie/build-configs/issues"
  },
  "keywords": [
    "tsup",
    "unbuild",
    "build-config",
    "typescript",
    "bundler"
  ],
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "rad-build": "./dist/cli/index.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./tsup": {
      "types": "./dist/tsup.config.d.ts",
      "import": "./dist/tsup.config.mjs"
    },
    "./unbuild": {
      "types": "./dist/unbuild.config.d.ts",
      "import": "./dist/unbuild.config.mjs"
    },
    "./presets": {
      "types": "./dist/presets/index.d.ts",
      "import": "./dist/presets/index.mjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "unbuild",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "bumpp --yes --no-push --no-tag --release patch",
    "types": "tsc -p tsconfig.typecheck.json",
    "prepublishOnly": "pnpm run lint && pnpm run types && pnpm run build",
    "prepack": "pnpm run prepublishOnly",
    "knip": "knip",
    "test": "vitest run",
    "dev": "tsx src/index.ts"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "cac": "^6.7.14",
    "consola": "^3.4.2",
    "defu": "^6.1.4",
    "execa": "^9.6.1",
    "jiti": "^2.6.1",
    "picocolors": "^1.1.1",
    "tsup": "^8.5.1",
    "unbuild": "^3.6.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@adddog/eslint": "workspace:*",
    "@rad/config": "workspace:*",
    "@types/node": "^22.19.1",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">= 22",
    "pnpm": ">= 10",
    "npm": ">= 11"
  }
}
