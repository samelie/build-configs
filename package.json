{
  "name": "@adddog/build-configs",
  "version": "0.0.1",
  "description": "Reusable build configurations for tsup and unbuild",
  "type": "module",
  "author": "Sam Elie <sam@add.dog>",
  "license": "MIT",
  "bugs": {},
  "keywords": [
    "tsup",
    "unbuild",
    "build-config",
    "typescript",
    "bundler"
  ],
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "rad-build": "./dist/cli/index.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./tsup": {
      "types": "./dist/tsup.config.d.ts",
      "import": "./dist/tsup.config.mjs"
    },
    "./unbuild": {
      "types": "./dist/unbuild.config.d.ts",
      "import": "./dist/unbuild.config.mjs"
    },
    "./presets": {
      "types": "./dist/presets/index.d.ts",
      "import": "./dist/presets/index.mjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "unbuild",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "bumpp",
    "types": "tsc -p tsconfig.typecheck.json",
    "knip": "knip",
    "test": "vitest run",
    "dev": "tsx src/index.ts"
  },
  "dependencies": {
    "@clack/prompts": "^0.8.2",
    "cac": "^6.7.14",
    "consola": "^3.4.2",
    "defu": "^6.1.4",
    "execa": "^9.6.0",
    "jiti": "^2.6.1",
    "picocolors": "^1.1.1",
    "tsup": "^8.5.0",
    "unbuild": "^3.6.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@rad/config": "workspace:*",
    "@rad/eslint": "workspace:*",
    "@types/node": "^22.18.10",
    "bumpp": "^10.3.1",
    "eslint": "^9.37.0",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "engines": {
    "node": ">= 22",
    "pnpm": ">= 10",
    "npm": ">= 11"
  }
}
